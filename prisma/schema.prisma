generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Account {
  id             String   @id @map("_id")
  isPrimary      Boolean  @default(false)
  ownerId        String
  linkedGuilds   Guild[]  @relation(fields: [linkedGuildIds], references: [id])
  linkedGuildIds String[]

  @@index([ownerId])
}

model Guild {
  id               String    @id @map("_id")
  ownerId          String
  groupId          String?
  inviteChannelId  String?
  parentGuildId    String?
  parentGuild      Guild?    @relation("ParentChild", fields: [parentGuildId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  childGuilds      Guild[]   @relation("ParentChild")
  linkedAccounts   Account[] @relation(fields: [linkedAccountIds], references: [id])
  linkedAccountIds String[]

  @@index([ownerId])
}
