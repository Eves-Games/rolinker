generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id        String    @id @map("_id")
  email     String    @unique
  name      String
  apiKeys   API_Key[]
  accounts  Account[]
  guilds    Guild[]
}

model API_Key {
  id        String @id @map("_id")
  userId    String
  guildId   String @unique
  createdAt DateTime @default(now())
  user      User   @relation(fields: [userId], references: [id])
  guild     Guild  @relation(fields: [guildId], references: [id])
}

model Account {
  id        String   @id @map("_id")
  userId    String
  isPrimary Boolean  @default(false)
  guildIds  String[]
  guilds    Guild[]  @relation(fields: [guildIds], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, isPrimary], name: "onePrimaryAccountPerUser")
  @@index([userId])
}

model Guild {
  id              String    @id @map("_id")
  name            String
  ownerId         String
  iconUrl         String?
  groupId         String?
  inviteChannelId String?
  parentGuildId   String?
  accountIds      String[]
  apiKey          API_Key?
  parentGuild     Guild?    @relation("ParentChild", fields: [parentGuildId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  childGuilds     Guild[]   @relation("ParentChild")
  accounts        Account[] @relation(fields: [accountIds], references: [id])
  owner           User      @relation(fields: [ownerId], references: [id])

  @@index([ownerId])
}