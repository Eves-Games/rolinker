generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model ApiKey {
  id        String   @id @default(uuid()) @map("_id")
  userId    String
  key       String   @unique
  guildId   String   @unique
  createdAt DateTime @default(now())
  guild     Guild    @relation(fields: [guildId], references: [id])
}

model Account {
  id        String   @id @map("_id")
  userId    String
  isPrimary Boolean  @default(false)
  guildIds  String[]
  guilds    Guild[]  @relation(fields: [guildIds], references: [id])

  @@unique([userId, isPrimary], name: "onePrimaryAccountPerUser")
  @@index([userId])
}

model Guild {
  id              String    @id @map("_id")
  name            String
  ownerId         String
  iconUrl         String?
  groupId         String?
  inviteChannelId String?
  parentGuildId   String?
  accountIds      String[]
  apiKey          ApiKey?
  parentGuild     Guild?    @relation("ParentChild", fields: [parentGuildId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  childGuilds     Guild[]   @relation("ParentChild")
  accounts        Account[] @relation(fields: [accountIds], references: [id])

  @@index([ownerId])
}
