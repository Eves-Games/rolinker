generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Account {
  id        String   @id @map("_id")
  ownerId   String
  isPrimary Boolean  @default(false)
  guildIds  String[]
  guilds    Guild[]  @relation(fields: [guildIds], references: [id])

  @@unique([ownerId, isPrimary], name: "oneAccountPerUserPrimary")
  @@index([ownerId])
}

model Guild {
  id              String    @id @map("_id")
  name            String
  ownerId         String
  iconUrl         String?
  groupId         String?
  inviteChannelId String?
  parentGuildId   String?
  accountIds      String[]
  parentGuild     Guild?    @relation("ParentChild", fields: [parentGuildId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  childGuilds     Guild[]   @relation("ParentChild")
  accounts        Account[] @relation(fields: [accountIds], references: [id])

  @@index([ownerId])
}
